{
    "name": "t3g/hubspot",
    "type": "typo3-cms-extension",
    "description": "hubpot extension",
    "license": ["GPL-2.0-or-later"],
    "authors": [
        {
            "name": "TYPO3 GmbH",
            "role": "Developer",
            "homepage": "https://typo3.com/"
        }
    ],
    "require": {
        "typo3/cms-backend": "^8.7 || ^9.5",
        "typo3/cms-core": "^8.7 || ^9.5",
        "typo3/cms-extbase": "^8.7 || ^9.5",
        "typo3/cms-frontend": "^8.7 || ^9.5",
        "typo3/cms-fluid": "^8.7 || ^9.5",
        "ryanwinchester/hubspot-php": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.3.1",
        "phpunit/phpunit": "^5"
    },
    "autoload": {
        "psr-4": {
            "T3G\\Hubspot\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "T3G\\Hubspot\\Tests\\": "Tests/"
        }
    },
    "replace": {
        "hubspot": "self.version",
        "typo3-ter/hubspot": "self.version"
    },
    "config": {
        "optimize-autoloader": true,
        "vendor-dir": ".build/vendor",
        "bin-dir": ".build/bin"
    },
    "scripts": {
        "t3g:cgl": [
            "php-cs-fixer fix --config Build/.php_cs.dist --format=junit > .build/logs/php-cs-fixer.xml"
        ]
    }
}
